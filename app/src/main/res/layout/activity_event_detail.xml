<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EventDetailActivity">

    <LinearLayout
        android:id="@+id/LayoutEventDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bgNameEventDetail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tvNameEventDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:textColor="#fdfdfd"
                android:textSize="30dp"
                tools:text="Retrofit 101" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/tvHeadDescEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text="Description" />

                    <TextView
                        android:id="@+id/tvDescEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="Introducing Retrofit 101"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvHeadPlaceEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text="Place" />

                    <TextView
                        android:id="@+id/tvPlaceEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="Tangerang"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvHeadContactPersonEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text="Contact" />

                    <TextView
                        android:id="@+id/tvContactPersonEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="081911099626"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvHeadQuotaEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text="Quota" />

                    <TextView
                        android:id="@+id/tvQuotaEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="100 Peserta"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvHeadTimeEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text=" Date Time" />

                    <TextView
                        android:id="@+id/tvTimeEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="2018-07-02 11:00:00+00:00"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvHeadTypeEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        tools:text="Categoriy" />

                    <TextView
                        android:id="@+id/tvTypeEventDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"
                        tools:text="Workshop" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            android:background="@color/colorAccent" />

    </LinearLayout>

</ScrollView>